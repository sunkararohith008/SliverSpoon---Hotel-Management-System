                <label asp-for="NumberOfPersons" class="control-label"></label>
                <input asp-for="NumberOfPersons" class="form-control" />
                <span asp-validation-for="NumberOfPersons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBooking" class="control-label"></label>
                <input asp-for="DateOfBooking" class="form-control" />
                <span asp-validation-for="DateOfBooking" class="text-danger"></span>
